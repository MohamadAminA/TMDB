@section Header{
	<link rel="stylesheet" href="/css/chat.css" />
}


	@{
	ViewData["Title"] = "Support";
}
<!-- breadcrumb area start -->
<section class="breadcrumb-area">
	<div class="container">
	</div>
</section><!-- breadcrumb area end -->
<div class="container">
	<div id="try" class="row disconnect" style="display:none">

		<div class="col-sm-12">
			<span class="badge badge-danger">Trying To Connect ...</span>
		</div>

	</div>
	<form id="name">
		<div class="row user">

			<div class="col-sm-8">
				<input class="form-control" type="text" placeholder="Enter Your Name ... " />
			</div>
			<div class="col-sm-2">
				<input type="submit" class="btn btn-info form-control" value="Enter" />
			</div>

		</div>
	</form>
	<div id="messageform" style="display:none">
		<div class="row connect">

			<div class="col-sm-4">
				<ul id="income">
				</ul>
			</div>

			<div class="col-sm-4">
			</div>
		</div>
		<form id="chatform">
			<div class="row connect">


				<div class="col-sm-8">
					<input type="text" class="form-control" />
				</div>
				<div class="col-sm-1"></div>

				<div id="sendmes" class="col-sm-3">
					<input type="submit" value="send" class="btn btn-primary form-control" />
				</div>


			</div>
		</form>
	</div>
</div>

@section Footer{
	<script src="https://unpkg.com/@@aspnet/signalr@@1.0.2/dist/browser/signalr.js" integrity="sha384-gjN8HGdgW45EWYHOqrWrZ8XHLv1zKBralQ9UU94n//6MvoCdsF3NJrBt9FssrFK3" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js" integrity="sha256-CutOzxCRucUsn6C6TcEYsauvvYilEniTXldPa6/wu0k=" crossorigin="anonymous"></script>
	<script src="/js/ChatRoom.js"></script>
}