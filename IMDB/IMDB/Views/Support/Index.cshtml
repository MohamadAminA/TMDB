	<div class="container">
		
	</div>
</section><!-- breadcrumb area end -->
	<div class="container">
		<div id="try" class="row disconnect" style="display:none">

			<div class="col-lg-12">
				<span class="badge badge-danger">Trying To Connect ...</span>
			</div>

		</div>
		<form id="name">
			<div class="row user">

				<div class="col-lg-8">
					<input class="form-control" type="text" placeholder="Enter Your Name ... " />
