                type: "GET",
                url: '/api/Api/GetOneVideoKey?id=' + Id,
                success: function (response) {
                    const Array = response.split('*');
                    const r = document.getElementById("carouselExampleIndicators");
                    const d = document.createElement("div");
                    d.setAttribute("id", "carousel");
                    d.setAttribute("class", "carousel-inner");
                    const g = document.createElement("ol");
                    g.setAttribute("id", "line");
                    g.setAttribute("class", "carousel-indicators");
                    r.appendChild(g);
                    r.appendChild(d);
                   

                   

                    const carousel = document.getElementById('carousel');
                    const div = document.createElement("div");
                    div.setAttribute('class', 'carousel-item active');
                    carousel.appendChild(div);
                    const img = document.createElement("iframe");
                       
                    img.setAttribute('frameborder', "0");
                    img.setAttribute('allowfullscreen' ,"true")
                    img.setAttribute('allow', "accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture");
                    img.setAttribute('style', "height: 500px;");
                    
               //     img.setAttribute('allowfullscreen');
                    img.setAttribute('class', "d-block w-100");
                    img.setAttribute('style', "height: 500px;");
                    img.setAttribute('src', "https://www.youtube.com/embed/"+ Array[Array.length-2]);
                    div.appendChild(img);
                    const f = document.getElementById("line");
                    const li = document.createElement("li");
                    li.setAttribute("data-target", "#carouselExampleIndicators");
                    li.setAttribute("data-slide-to", Array.length - 1);
                    li.setAttribute("class", "active");
                    li.setAttribute("data-slide-to","0")
                    f.appendChild(li);
                    let counter = 2;

                    
                    while ((Array.length - counter - 1) >= 0) {
                        const div2 = document.createElement("div");
                        div2.setAttribute('class', 'carousel-item');
                        carousel.appendChild(div2);
                        const img2 = document.createElement("iframe");
                        img2.setAttribute('frameborder', "0");
                        img2.setAttribute('allowfullscreen', "true")
                        img2.setAttribute('allow', "accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture");
                        img2.setAttribute('style', "height: 500px;");
                        img2.setAttribute('class', "d-block w-100");
                        img2.setAttribute('style', "height: 500px;");
                        img2.setAttribute('src', "https://www.youtube.com/embed/" + Array[Array.length - counter-1]);
                        div2.appendChild(img2);
                        const fd = document.getElementById("line");
                        const lid = document.createElement("li");
                        lid.setAttribute("data-target", "#carouselExampleIndicators");
                        lid.setAttribute("data-slide-to", Array.length - 1 - counter);
                        lid.setAttribute("data-slide-to", counter)

                        fd.appendChild(lid);
