							@*<li data-filter="*" class="active">Latest</li>*@

						</ul>
					</div>
				</div>
			</div>
			<hr />
			<div class="row">
				<div class="col-lg-12">
					<div class="row portfolio-item">
						@foreach (var item in Model.MovieCredits.Crew)
						{
