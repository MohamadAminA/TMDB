												<div class="author-review">

													<h6>Department : @item.Department</h6>

												</div><br />
												<p>@item.ReleaseDate?.ToString("yyyy-MM-dd")</p>
											</div>
										</div>
									</div>
								</a>
							</div>

						}


					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- movie section end -->
}